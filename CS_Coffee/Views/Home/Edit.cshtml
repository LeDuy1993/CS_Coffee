@model OrderViewModel
@{
    ViewBag.Title = "Edit Order";
}
<div class="col-sm-5 container pb-5 pt-3 " style="background-image: url('/images/bia4.jpg'); border-radius:5px;">
    <h3 class="pb-3 pl-5 text-white">Table: @Model.OrderId &minus; Update</h3>
    <hr />
    <form class="pl-5 text-white" enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">
        <input hidden asp-for="PodId" />
        <input hidden asp-for="OrderId" />
        <input hidden asp-for="ProductId" />
        <input hidden asp-for="OrderDetailId" />

        <div class="row form-group" style="width:75%">

            <div class="col-sm-3">
                <label asp-for="Name" class="font-italic"></label>
            </div>
            <div class="col-sm-9">
                <input readonly asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class=" text-danger"></span>
            </div>
        </div>

        <div class="row form-group" style="width:75%">

            <div class="col-sm-3">
                <label asp-for="Price" class="font-italic"></label>
            </div>
            <div class="col-sm-9">
                <input readonly asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class=" text-danger"></span>
            </div>
        </div>
        <div class="row form-group" style="width:75%">

            <div class="col-sm-3">
                <label asp-for="Count" class="font-italic"></label>
            </div>
            <div class="col-sm-9">
                <input min="1" asp-for="Count" class="form-control">
                <span asp-validation-for="Count" class=" text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn btn-danger" asp-controller="Home" asp-action="Index" asp-route-id="@Model.OrderId">Cancel</a>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop(); //this == ".custom-file-input";
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

            });
        });
    </script>
}