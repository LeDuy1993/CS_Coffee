@model OrderCreateViewModel
@{
    ViewBag.Title = "Create Order";

}
<div class="col-sm-5 container pb-5 pt-3 " style="background-image: url('/images/bia4.jpg'); border-radius:5px;">

    <h3  class="text-white pl-5 ">Table: @Model.TableId &minus; @ViewBag.Title</h3>

    <hr />
    <form class="pl-5 text-white" enctype="multipart/form-data" asp-controller="Home" asp-action="Order" method="post">
        <div asp-validation-summary="All" class="text-danger">
            <input hidden asp-for="Using" />
            <input hidden asp-for="OrderDetailId" />
            <input hidden asp-for="ProductOrderDetailId" />
            <input hidden asp-for="ProductId" />
        </div>
        <div class="row form-group" style="width:75%">

            <div class="col-sm-3">
                <label asp-for="TableId" class="font-italic text-white">Table</label>
            </div>
            <div class="col-sm-9">

                <input readonly asp-for="TableId" class="form-control">
                <span asp-validation-for="TableId" class=" text-danger"></span>
            </div>
        </div>
        <div class="row form-group" style="width:75%">

            <div class="col-sm-3">
                <label asp-for="Name" class="font-italic text-white"></label>
            </div>
            <div class="col-sm-9">
                <input readonly asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class=" text-danger"></span>
            </div>
        </div>
        <div class="row form-group" style="width:75%">

            <div class="col-sm-3">
                <label asp-for="Count" class="font-italic text-white"></label>
            </div>
            <div class="col-sm-9">
                <input min="1" asp-for="Count" class="form-control">
                <span asp-validation-for="Count" class=" text-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Add</button>
        <a class="btn btn-danger" asp-controller="Home" asp-action="Index" asp-route-id="TableId">Cancel</a>
    </form>
</div>