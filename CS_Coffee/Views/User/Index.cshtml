@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "Management User";
    Layout = "_LayoutDashBoard";
    var nameLogin = ViewBag.NameLogin;
    var count = 1;
}
<h3>@ViewBag.Tittle</h3>
<a asp-controller="User" asp-action="Create" class="btn btn-warning my-1"> Create User <i class="fa fa-user-plus"></i></a>
<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Stt</th>
            <th>Email</th>
            <th>City</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>Role Name</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                if (user.Email!=nameLogin)
                {
                    <tr>
                        <td>@count</td>
                        <td>@user.Email</td>
                        <td>@user.City</td>
                        <td>@user.Address</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.RolesName</td>
                        <td class="text-center">
                            <a class="btn btn-warning" asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
                            <button class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>
                            @*Modal View Delete Product*@
                            <div class="modal" id="myModal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header ">
                                            <a class="navbar-brand " asp-area="" asp-controller="Product" asp-action="Index">CS_Coffee</a>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <div class="modal-header">

                                            <h6>You want to delete this user: @user.Email</h6> 
                                        </div>
                                        <div class="modal-footer">
                                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class=" btn btn-warning">Yes</a>
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>

                    </tr>
                     count = count + 1;
                }
               
            }
        }
    </tbody>
</table>


