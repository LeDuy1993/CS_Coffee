<script>
    $('#Create').on("click", function () {
        $("#exampleModalLabel").text("Create Task");
        $.ajax({
            method: 'get',
            url: `Product/Create`,
            success: function (result) {
                // Sau khi tra ve patialview ta gán giá trị cho phần nội dung của popup
                $("#modal-body").html(result);
            }
        });
        $('#exampleModal').appendTo("body");
        $('#exampleModal').modal('show');
    });
    edit = function (id) {
        $("#exampleModalLabel").text("Task Detail");
        $.ajax({
            method: 'get',
            url: `/Product/Edit/${id}`,
            success: function (result) {
                $("#modal-body").html(result);
            }
        });
        $('#exampleModal').appendTo("body");
        $("#exampleModal").modal('show');
    };
</script>
