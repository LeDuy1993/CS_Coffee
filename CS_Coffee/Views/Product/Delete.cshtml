@model Product
@{
    Layout = "_Layout1";
    ViewBag.Title = "Delete Employee";
    var avatarPath = $"/images/{(Model.AvatarPath ?? "fx.jpg")}";
}
<form asp-controller="Product" asp-action="Delete" method="post">
    <input hidden asp-for="ProductId" />
    <input hidden asp-for="AvatarPath" />
    <div class="d-flex justify-content-center text-center">
        <div class="card ">
            <div class="card-header text-center">
                <h3>@Model.Name</h3>
            </div>
            <div class="card-body">
                <img src="@avatarPath" width="200" height="200" />
                <p>@Model.Price</p>
            
            </div>
            <div class="card-footer">
                <a class="btn btn-info" asp-controller="Product" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-primary">Delete</button>

            </div>
        </div>
    </div>
</form>
