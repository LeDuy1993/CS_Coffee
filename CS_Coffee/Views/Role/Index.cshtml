@model IEnumerable<Role>
@{
    ViewBag.Title = " Role Management";
    Layout = "_LayoutDashBoard";
    var count = 1;
}
<h3>@ViewBag.Tittle</h3>
<a asp-controller="Role" asp-action="Create" class="btn btn-warning my-1"> Create Role</a>
<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Stt</th>
            <th>Id</th>
            <th>Role Name</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@role.RoleId</td>
                    <td>@role.RoleName</td>
                    <td class="text-center">
                        <a class="btn btn-warning" asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId">Edit</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteRoleModel">
                            Delete
                        </button>
                        <!-- The Modal -->
                        <div class="modal" id="deleteRoleModel">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Confirm delete role</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure want to remove this role?
                                    </div>
                                    <div class="modal-footer">
                                        <a class="btn btn-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@role.RoleId">Yes</a>
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                count = count + 1;
            }
        }
    </tbody>
</table>